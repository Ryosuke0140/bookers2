<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <div id="error_explanation">
        <% if @user.errors.any? %>
          <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <h1>User info</h>
          <%= form_with model: @user, url: update_user_path(@user.id), method: :patch do |f| %>
            <h4>Name</h4>
            <%= f.text_field :name %>

            <h4>Introduction</h4>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

            <h4>Introduction</h4>
            <%= f.text_field :introduction %>
            <h4><%= f.submit 'Update User' %></h4>
          <% end %>
      </div>
    </div>
  </div>